<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.chuahamilton.conversioncalculator.fragments.SettingsFragment">

    <TextView
        android:id="@+id/settingsFromLabel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:text="@string/from_label"
        android:textAlignment="textStart"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/settingsToLabel"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Spinner
        android:id="@+id/settingsFromSpinner"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:dropDownWidth="200dp"
        android:dropDownVerticalOffset="50dp"
        android:spinnerMode="dropdown"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/settingsToSpinner"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/settingsFromLabel" />

    <TextView
        android:id="@+id/settingsToLabel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/to_label"
        android:textAlignment="textStart"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/settingsFromLabel"
        app:layout_constraintTop_toTopOf="@+id/settingsFromLabel" />

    <Spinner
        android:id="@+id/settingsToSpinner"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:dropDownWidth="200dp"
        android:dropDownVerticalOffset="50dp"
        android:layout_marginEnd="8dp"
        android:spinnerMode="dropdown"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/settingsFromSpinner"
        app:layout_constraintTop_toTopOf="@+id/settingsFromSpinner" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabIcon"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="32dp"
        android:src="@drawable/ic_checkmark"
        app:backgroundTint="@color/conversionCalculator_yellow"
        app:fabSize="normal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>
